#:kivy 2.3.0

<PongBall>:
    size: 50, 50
    canvas:
        Ellipse:
            pos: self.pos
            size: self.size

<PongPaddle>:
    size: 25, 200
    canvas:
        Rectangle:
            pos: self.pos
            size: self.size

<PongGame>:
    ball: pong_ball

    player1: paddle_left
    player2: paddle_right

    canvas:
        Rectangle:
            size: 10, root.height
            pos: self.center_x-5, 0

    Label:
        text: str(root.player1.score)
        font_size: 70
        top: root.top - 50
        center_x: root.width / 4

    Label:
        text: str(root.player2.score)
        font_size: 70
        top: root.top - 50
        center_x: root.width * 3/4

    PongBall:
        center: root.center
        id: pong_ball

    PongPaddle:
        id: paddle_left
        x: root.x
        center_y: root.center_y

    PongPaddle:
        id: paddle_right
        x: root.right - self.width
        center_y: root.center_y